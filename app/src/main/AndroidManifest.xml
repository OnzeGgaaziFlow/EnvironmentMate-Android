<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtjin.envmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".views.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnvMate"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.sign_up.sign_up_complete.SignUpCompleteActivity" />
        <activity android:name=".views.sign_up.user_info.UserInfoActivity" />
        <activity android:name=".views.sign_up.phone_auth.PhoneAuthActivity" />
        <activity android:name=".views.sign_up.sign_up.SignUpActivity" />
        <activity android:name=".views.login.LoginActivity" />
        <activity android:name=".views.sign_in.SignInActivity" />
        <activity android:name=".views.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>